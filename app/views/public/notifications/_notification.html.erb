<% visitor = notification.visitor %>
<% post = notification.post %>
<div class="border-bottom border-3 pt-3 pb-3">
  <%= link_to user_path(notification.visitor) do %>
    <%= attachment_image_tag visitor, :profile_image, :fill,100,100, fallback: "no_image.png", size: "50x50", class: "rounded-circle" %>
  <% end %>
  <%= notification_form(notification) %><span class="moderate-font"><%="(#{time_ago_in_words(notification.created_at)}å‰)"%></span>
  <% if !@comment.nil? %>
    <p class="moderate-font text-center" style="color: #C0C0C0;">
      <%= @comment.comment %>
    </p>
  <% end %>
</div>